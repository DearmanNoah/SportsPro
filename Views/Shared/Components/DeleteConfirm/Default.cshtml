@model DeleteConfirmModel

<div class="alert alert-warning">
    <h4 class="alert-heading">Confirm Deletion</h4>
    <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> 
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
