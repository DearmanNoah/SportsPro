<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">SportsPro</a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto">
                    <a class="nav-item nav-link"
                    asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-item nav-link"
                    asp-controller="Product" asp-action="List">Products</a>
                    <a class="nav-item nav-link"
                    asp-controller="Technician" asp-action="List">Technicians</a>
                    <a class="nav-item nav-link"
                    asp-controller="Customer" asp-action="List">Customers</a>
                    <a class="nav-item nav-link"
                    asp-controller="Incident" asp-action="List">Incidents</a>
                    <a class="nav-item nav-link "
                    asp-controller="Registration" asp-action="ListByCustomer">Registrations</a>
                </div>
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link"
                       asp-controller="Home" asp-action="About">About</a>
                </div>
            </nav>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
            <show-message></show-message>
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-3 pb-3">
    <vc:footer></vc:footer>
</footer>

</body>
</html>