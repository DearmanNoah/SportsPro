@model IncidentsViewModel
@{
	ViewData["Title"] = "List By Tech";
}

<div>
	<h2>Technician</h2>
	<form asp-action="ListByTech" method="post">
		@if (TempData.Keys.Contains("error"))
		{
			<h3 class="text-danger">You must select a technician.</h3>
		}
		<div class="mb-3">
		<select asp-for="CIncident.TechnicianID"
		asp-items="@(new SelectList(Model.Technicians,"TechnicianID","Name"))"
		class="form-select">
		<option value="">select a technician...</option>
		</select>
		</div>
		<button type="submit" class="btn btn-primary">Select</button>
	</form>
</div>