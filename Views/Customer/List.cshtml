@model List<Customer>

@{
	ViewData["Title"] = "Customer Manager";
}

<div class="mb-2">
	<h1>Customer Manager</h1>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>City</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var customer in Model)
		{
			<tr>
				<td>@customer.FirstName @customer.LastName</td>
				<td>@customer.Email</td>
				<td>@customer.City</td>
				<td>
					<a asp-controller="Customer" asp-action="Edit"
				   asp-route-id="@customer.CustomerID" class="btn btn-primary rounded">Edit</a>
					<a asp-controller="Customer" asp-action="Delete"
				   asp-route-id="@customer.CustomerID" class="btn btn-primary rounded">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="mb-2">
	<a asp-controller="Customer" asp-action="Add" class="btn btn-primary rounded">Add New Customer</a>
</div>