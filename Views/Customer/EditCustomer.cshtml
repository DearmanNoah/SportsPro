@model Customer
@{
	string title = ViewBag.Action + "Customer"; ViewData["Title"] = title;

	<style>
		.input-validation-error {
			border: 2px solid red;
			background-color: #faebd7;
		}
	</style>
}

<partial name="_Scripts" />

<h2>@ViewBag.Title</h2>
